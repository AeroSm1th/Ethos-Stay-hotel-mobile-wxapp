/* pages/list/list.wxss */

.container {
  height: 100vh;
  background-color: var(--bg-secondary);
  padding-top: env(safe-area-inset-top);
}

/* 自定义导航栏 */
.custom-nav-bar {
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-md);
  z-index: 1000;
}

.nav-left,
.nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  color: white;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: white;
}

/* 顶部筛选条件展示 */
.filter-header {
  background-color: var(--bg-primary);
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
}

.filter-icon {
  font-size: 28rpx;
}

.filter-info .city {
  color: var(--text-primary);
  font-weight: 500;
  font-size: 32rpx;
}

.filter-info .date {
  color: var(--text-secondary);
  font-size: 26rpx;
}

.date-separator {
  color: var(--text-tertiary);
  font-size: 24rpx;
  margin: 0 4rpx;
}

.filter-info .nights {
  color: var(--primary-color);
  font-size: 26rpx;
  font-weight: 500;
}

.filter-edit {
  padding: var(--spacing-xs);
}

.edit-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 筛选面板 */
.filter-panel {
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-color);
  padding: var(--spacing-md);
}

.filter-row {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--border-color);
}

.filter-row:last-child {
  border-bottom: none;
}

.filter-label {
  width: 120rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.filter-value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.filter-value .arrow {
  font-size: 40rpx;
  color: var(--text-tertiary);
}

.date-picker-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 覆盖 date-picker 组件的默认样式，使其适应筛选面板 */
.filter-row .date-picker {
  width: auto;
}

.filter-row .date-picker__content {
  background: transparent;
  border: none;
  padding: 0;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.filter-row .date-picker__value {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.filter-row .date-picker__text {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: normal;
}

.filter-row .date-picker__icon {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.keyword-input {
  flex: 1;
  padding: var(--spacing-xs) var(--spacing-sm);
  background-color: var(--bg-secondary);
  border-radius: var(--radius-sm);
  font-size: 28rpx;
}

.filter-actions {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
}

.apply-button {
  width: 100%;
  background-color: var(--primary-color);
  color: var(--bg-primary);
  border-radius: var(--radius-md);
  font-size: 32rpx;
  padding: var(--spacing-md);
}

/* 城市选择器弹窗 */
.city-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.city-picker-content {
  width: 85%;
  max-height: 75vh;
  background-color: #ffffff;
  border-radius: var(--radius-lg);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.city-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  background-color: #ffffff;
  flex-shrink: 0;
}

.city-picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.city-picker-close {
  font-size: 40rpx;
  color: var(--text-secondary);
  padding: 0 var(--spacing-sm);
}

.city-list {
  flex: 1;
  overflow-y: auto;
  background-color: #ffffff;
  padding: var(--spacing-md);
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  align-content: flex-start;
}

.city-item {
  padding: var(--spacing-md) var(--spacing-sm);
  text-align: center;
  background-color: #f5f5f5;
  border-radius: var(--radius-md);
  font-size: 28rpx;
  color: var(--text-primary);
}

.city-item.active {
  background-color: var(--primary-color);
  color: #ffffff;
  font-weight: 500;
}

/* 酒店总数 */
.hotel-count {
  padding: var(--spacing-md);
  font-size: 28rpx;
  color: var(--text-secondary);
  background-color: var(--bg-primary);
}

/* 排序栏 */
.sort-bar {
  display: flex;
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-color);
}

.sort-item {
  flex: 1;
  text-align: center;
  padding: var(--spacing-md);
  font-size: 28rpx;
  color: var(--text-secondary);
  position: relative;
}

.sort-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.sort-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 筛选区域 */
.filter-section {
  background-color: var(--bg-primary);
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.filter-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.filter-option {
  padding: var(--spacing-xs) var(--spacing-md);
  background-color: var(--bg-secondary);
  border: 1rpx solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: 24rpx;
  color: var(--text-secondary);
}

.filter-option.active {
  background-color: var(--primary-color);
  color: var(--bg-primary);
  border-color: var(--primary-color);
}

/* 快捷标签 */
.quick-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-color);
}

.tag-item {
  padding: var(--spacing-xs) var(--spacing-md);
  background-color: var(--bg-secondary);
  border: 1rpx solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: 24rpx;
  color: var(--text-secondary);
}

.tag-item.active {
  background-color: var(--primary-color);
  color: var(--bg-primary);
  border-color: var(--primary-color);
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-xl);
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-xl);
  gap: var(--spacing-md);
}

.error-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.retry-btn {
  padding: var(--spacing-sm) var(--spacing-lg);
  background-color: var(--primary-color);
  color: var(--bg-primary);
  border-radius: var(--radius-md);
  font-size: 28rpx;
}

/* 酒店列表 */
.hotel-list {
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

/* 加载更多状态 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md);
}

.load-more-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 没有更多数据 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md);
}

.no-more-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}
